<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/loginbg">
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:background="#000000"
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="65dp"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical" >
<!-- start here -->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:id="@+id/greet"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:id="@+id/h1"
                        android:text=" |  Good Food for Good Moments  | \n\n\n\n\n\n\n\n\n\n\n\n\n abcfoodorder@gmail.com"
                        android:textColor="#0a0a0a"
                        android:layout_width="380dp"
                        android:layout_height="250dp"
                        android:background="@drawable/homepic"
                        android:layout_margin="15dp"
                        />

                    <Button
                        android:id="@+id/em"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Get in touch with Email"
                        android:background="#90ee90"
                        android:fitsSystemWindows="true"

                        />
                    <!-- end hereeeeeeeeeeeeeeee -->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- start here  ++++++++++++++++++++++++++  -->

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:id="@+id/callbtn"
                        android:layout_gravity="right"
                        android:background="@drawable/call"


                        />
                    <TextView
                        android:layout_weight="1"

                        android:textSize="15sp"
                        android:textColor="#0a0a0a"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:background="@drawable/pizza"
                        android:text="Pizza \n\n\n\n\n\n\n 250Birr"
                        />

                    <Button
                        android:id="@+id/c1"
                        android:layout_weight="1"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:onClick="add_to_list"
                        android:background="@drawable/addtocart"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="spaghetti \n\n\n\n\n\n\n 100Birr"
                        android:textColor="#0a0a0a"
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:background="@drawable/spaghetti1"

                        />
                    <Button
                        android:id="@+id/c2"
                        android:layout_weight="1"
                        android:onClick="add_to_list"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/addtocart"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Roast Chhicken \n\n\n\n\n\n\n 350Birr"
                        android:textColor="#0a0a0a"
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:background="@drawable/roastchicken"
                        />
                    <Button
                        android:id="@+id/c3"
                        android:layout_weight="1"

                        android:onClick="add_to_list"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/addtocart"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Fish Sandwich \n\n\n\n\n\n\n 90Birr"
                        android:textColor="#0a0a0a"
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fishsand"
                        />
                    <Button
                        android:id="@+id/c4"
                        android:layout_weight="1"
                        android:onClick="add_to_list"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/addtocart"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Shawarma \n\n\n\n\n\n\n 150Birr"
                        android:textColor="#0a0a0a"
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:background="@drawable/shawarma"
                        />
                    <Button
                        android:id="@+id/c5"
                        android:layout_weight="1"
                        android:onClick="add_to_list"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/addtocart"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="\n"
                        android:textColor="#0a0a0a"
                        android:layout_width="340dp"
                        android:layout_height="150dp"

                        />
                    <Button
                        android:id="@+id/ch"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Proceed to Checkout"
                        android:background="#90ee90"
                        android:fitsSystemWindows="true"
                        android:onClick="placeOrder"
                        android:layout_gravity="center_horizontal|bottom"
                        />

                </LinearLayout>
<!-- End here  +++++++++++++++++++++++++++++++++++++++++++++++    -->
                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <Button
                        android:text="FindUs"
                        android:id="@+id/launching"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:background="@drawable/map"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="About \n App ver 1.0 \n   Group Memebers"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</ScrollView>


